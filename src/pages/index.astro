---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />

  {/* Hero Section */}
  <section class="mb-8">
    <div class="rounded-lg border p-6">
      <h1 class="text-4xl font-bold leading-tight">Your Name</h1>
      <h2 class="text-2xl text-muted-foreground">Your Title/Position</h2>
      <p class="text-muted-foreground mt-2">
        A brief introduction to yourself and your research interests.  For example: "I am a researcher in the field of artificial intelligence, focusing on natural language processing and machine learning."
      </p>
    </div>
  </section>

  {/* Summary of Research Interests */}
  <section class="mb-8">
    <div class="rounded-lg border p-6">
      <h2 class="text-2xl font-medium mb-4">Research Interests</h2>
      <p class="text-muted-foreground">
        A concise overview of your main research areas.  For example: "My research interests include natural language processing, machine learning, deep learning, and computational linguistics. I am particularly interested in developing novel algorithms for text summarization and question answering."
      </p>
    </div>
  </section>

  {/* Featured Publications/Projects */}
  <section class="mb-8">
    <h2 class="text-2xl font-medium mb-4">Featured Publications</h2>
    <ul class="flex flex-col gap-y-4">
      {/* Replace these with actual publication data */}
      <li>
        <Link href="#" class="text-foreground underline">Publication Title 1</Link>
        <p class="text-sm text-muted-foreground">Brief description of the publication.</p>
      </li>
      <li>
        <Link href="#" class="text-foreground underline">Publication Title 2</Link>
        <p class="text-sm text-muted-foreground">Brief description of the publication.</p>
      </li>
    </ul>
    <Link href="/publications" class={buttonVariants({ variant: 'ghost' })}>
      See all publications
    </Link>
  </section>

  {/* Link to About Page */}
  <section class="mb-8">
    <div class="rounded-lg border p-6">
      <p class="text-muted-foreground">
        Learn more about my background and experience on the <Link href="/about" class="text-foreground underline">About page</Link>.
      </p>
    </div>
  </section>

  {/* (Optional) Link to Blog */}
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
